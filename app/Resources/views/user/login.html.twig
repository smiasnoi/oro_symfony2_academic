{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
    {% if error %}
        <div id="errorMessage">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form id="loginForm" action="{{ path('loginPost') }}" method="post">
        <div class="input">
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="input">
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
        </div>
        <a class="register_link" href="{{ path('register') }}">Register</a>
        <button type="submit">Log in</button>
    </form>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 16px/1.2 sans-serif; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    #errorMessage {
        text-align: center;
        color:#f00;
    }
    #loginForm {
        position:absolute;
        top: 50%;
        left: 50%;
        padding:10px;
        border: 1px solid #aaa;
        box-shadow: 1px 1px 6px #999;
        margin: -50px 0 0 -155px;
    }
    #loginForm button {
        float:right;
        padding: 5px;
        font: 16px/1.2 sans-serif;
    }
    #loginForm .input {
        margin-bottom: 5px;
        overflow:hidden;
    }
    #loginForm .input label {
        padding: 3px;
        float:left;
        width: 100px;
    }
    #loginForm .register_link {
        float:left;
        padding:15px 0 0 15px ;
        font: 12px/1.2 sans-serif;
    }
    #loginForm .input input {
        float:left;
        width: 190px;
        font: 14px/1.8 sans-serif;
        padding: 0 5px 0;
        border: 1px solid #aaa;
    }
</style>
{% endblock %}