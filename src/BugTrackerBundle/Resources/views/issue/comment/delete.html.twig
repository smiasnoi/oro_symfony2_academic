<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="myModalLabel">Delete Comment</h3>
</div>
<div class="modal-body">
    <div class="panel-body form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Are you sure you want to delete this comment?</strong></div>
            <div class="panel-body">
                <dl class="details dl-horizontal">
                    <dt>Author</dt><dd><a href="{{ path('user_view', {'id': comment.author.id}) }}">{{ comment.author.fullname }}</a></dd>
                    <dt>Created</dt><dd>@TODO</dd>
                    <dt>Comment</dt><dd><p class="comment-body">{{ comment.body|nl2br }}</p></dd>
                </dl>
            </div>
        </div>
        {{ form_start(form, {'attr': {'id': 'commentDeleteForm', 'action': path('comment_delete', {'id': comment.id})}}) }}
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.delete, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-default', 'data-dismiss':'modal'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
