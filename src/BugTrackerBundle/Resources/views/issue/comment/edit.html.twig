<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="myModalLabel">Edit Comment</h3>
</div>
<div class="modal-body">
    <div class="panel-body form-horizontal">
        {{ form_start(form, {'attr': {'id': 'commentForm', 'action': path('comment_edit', {'id': comment.id})}}) }}
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.body, {'attr': {'class': 'form-control', 'rows':7}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.update, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-default', 'data-dismiss':'modal'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
