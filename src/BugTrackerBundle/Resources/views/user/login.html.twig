{% extends 'BugTrackerBundle::base.html.twig' %}
{% block title %}Login{% endblock %}
{% block body_class %}centered-body{% endblock %}
{% block body %}
    <div class="vertical-center">
        <div class="jumbotron col-sm-5 form-horizontal">
            {% if error %}
                <div id="errorMessage">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form id="loginForm" action="{{ path('loginPost') }}" method="post">
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        <label for="username">Username</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">
                        <label for="password">Password</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="password" id="password"  class="form-control" name="_password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-default">Log in</button>
                        or
                        <a class="register_link" href="{{ path('register') }}">Register</a> as operator
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}