{% extends 'BugTrackerBundle::base.html.twig' %}

{% block body %}
    <div id="container">
        <!-- grid content -->
        <div id="userGridWrapper">
            <table class="itemsGrid">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {%  for user in collection.items %}
                        <tr>
                            <td>{{ user.username|e }}</td>
                            <td>{{ user.fullname|e }}</td>
                            <td>{{ user.email|e }}</td>
                            <td> - </td>
                        </tr>
                    {%  endfor %}
                </tbody>
            </table>
            <div class="navPanel">
                <div class="position">Page {{ collection.current_page }} of {{ collection.total_pages }}</div>
                <ul class="navButtons">
                    <li class="prev-link">
                    {% if collection.prev_link %}
                        <a href="{{ collection.prev_link }}">&lt;</a>
                    {% else %}
                        <span class="disabled">&lt;</span>
                    {% endif %}
                    </li>
                    <li class="next-link">
                    {% if collection.next_link %}
                        <a href="{{ collection.next_link }}">&gt;</a>
                    {% else %}
                        <span class="disabled">&gt;</span>
                    {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
