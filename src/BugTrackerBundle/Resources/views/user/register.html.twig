{% extends 'BugTrackerBundle::base.html.twig' %}
{% block title %}Register New Operator{% endblock %}
{% block body_class %}centered-body{% endblock %}
{% block body %}
    <div class="vertical-center">
        <div class="jumbotron col-sm-6 form-horizontal">
        {{ form_start(form, {'attr': {'id': 'userForm'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <div class="col-sm-4 control-label">
                {{ form_label(form.email) }}
                </div>
                <div class="col-sm-8">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                {{ form_label(form.username) }}
                </div>
                <div class="col-sm-8">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                {{ form_label(form.fullname) }}
                </div>
                <div class="col-sm-8">
                {{ form_errors(form.fullname) }}
                {{ form_widget(form.fullname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                {{ form_label(form.plain_password.first) }}
                </div>
                <div class="col-sm-8">
                {{ form_errors(form.plain_password.first) }}
                {{ form_widget(form.plain_password.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.plain_password.second) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.plain_password.second) }}
                    {{ form_widget(form.plain_password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                {{ form_widget(form.register, {'attr': {'class': 'btn btn-default'}}) }}
                </div>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
