{% extends 'BugTrackerBundle::base.html.twig' %}
{% block title %}Edit user '{{ user.fullname }}'{% endblock %}
{% block body %}
    <div class="vertical-center">
        <div class="jumbotron col-sm-6 form-horizontal">
            {{ form_start(form, {'attr': {'id': 'userForm'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.email) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.username) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.fullname) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.fullname) }}
                    {{ form_widget(form.fullname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') and app.user.id != user.id %}
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.roles) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.roles) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.password) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">
                    {{ form_label(form.cpassword) }}
                </div>
                <div class="col-sm-8">
                    {{ form_errors(form.cpassword) }}
                    {{ form_widget(form.cpassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {% do form.roles.setRendered %}
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
